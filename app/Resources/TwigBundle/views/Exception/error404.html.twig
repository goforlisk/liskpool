{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="jumbotron my-5">
            <h1 class="display-3">Page not found</h1>
            <hr class="my-4">
            <p>
                Sorry, this page can not be found...
            </p>
            {% if exception.message is defined and exception.message is not empty %}
                <p>
                    For debugging purposes you can see the data that was returned from the API below:<br />
                    <pre><code>{{ exception.message }}</code></pre>
                </p>
            {% endif %}
            <a class="btn btn-success" href="{{ path('home') }}">Back to the homepage</a>
        </div>
    </div>
{% endblock %}