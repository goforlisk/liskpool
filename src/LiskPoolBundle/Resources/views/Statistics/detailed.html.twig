{% extends 'base.html.twig' %}

{% block body %}
    <div class="container my-5">
        {% include "LiskPoolBundle::Statistics/includes/delegate.html.twig" %}
    </div>

    <div class="container my-5">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th scope="col">Lisk address</th>
                    <th scope="col">Total forged</th>
                    <th scope="col">Pending payout</th>
                </tr>
            </thead>
            <tbody>
                {% for voter in voters %}
                    <tr>
                        <td scope="row">{{ voter.address }}</td>
                        <td>{{ voter.balanceTotal / 100000000 }} LSK</td>
                        <td>{{ voter.balance / 100000000 }} LSK</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
